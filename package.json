{
  "name": "lintent",
  "version": "1.0.0",
  "description": "Make slop illegal. A semantic lint runner that enriches violations with context for AI agents.",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "lintent": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "lint",
    "linter",
    "ai",
    "llm",
    "semantic",
    "ruff",
    "eslint",
    "pyright",
    "typescript",
    "python",
    "code-quality",
    "developer-tools",
    "cli"
  ],
  "author": "lintent",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/avb7/lintent.git"
  },
  "homepage": "https://avb7.github.io/lintent",
  "bugs": {
    "url": "https://github.com/avb7/lintent/issues"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "lintent": "^1.0.0",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.10.0",
    "semantic-release": "^25.0.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "presets"
  ]
}
